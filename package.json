  "author": "Informatica el Corte Ingles (IECISA)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alastria/alastria-identity-lib/issues"
  },
  "homepage": "https://github.com/alastria/alastria-identity-lib#readme",
  "dependencies": {
    "@types/node": "12.11.5",
    "chai-as-promised": "^7.1.1",
    "ethereumjs-tx": "^1.3.3",
    "jsontokens": "2.0.2",
    "keythereum": "1.0.4",
    "npm-run-all": "4.1.5",
    "rimraf": "2.6.3",
    "typescript": "3.5.2",
    "web3": "1.2.1",
    "web3-utils": "1.0.0-beta.55"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "chai": "^4.2.0",
    "mocha": "^7.1.1",
    "sinon": "^9.0.2",
    "ts-node": "^8.8.2"
  }
